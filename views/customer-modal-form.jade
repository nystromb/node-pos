#customer-modal-form.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header 
        button.close(type='button', data-dismiss='modal', aria-label='close')
          span &times;
        h1 New Customer Form
      .modal-body
        form.form-horizontal#customer-form
          .form-group
            label.col-md-4.control-label.alert(for='customername') Customer Name   
            .col-md-5
              input#custfirstname.form-control(name='customername', placeholder='Full Name', type='text')
          .form-group
            label.col-md-4.control-label(for='customerphone') Contact
            .col-md-4
              input#customerphone.form-control(type='tel', placeholder='Home Phone', name='phonehome')
              input#customerphone.form-control(type='tel', placeholder='Cell Phone', name='phonecell')
              input#customerphone.form-control(type='tel', placeholder='Work Phone', name='phonework')
          .form-group
            label.col-md-4.control-label(for='customeraddr1') Address Line 1   
            .col-md-5
              input#customeraddr1.form-control(name='customeraddr1', placeholder='Street Address', type='text')
              p.help-block e.g. 123 Easy Street
          .form-group
            label.col-md-4.control-label(for='customeraddr2') Address Line 2   
            .col-md-5
              input#customeraddr2.form-control(name='customeraddr2', placeholder='Address Line 2', type='text')
              p.help-block Apartment, unit, building, etc.
          .form-group
            label.col-md-4.control-label(for='customercity') City  
            .col-md-4
              input#customercity.form-control(name='customercity', placeholder='City', type='text')
          .form-group
            label.col-md-4.control-label(for='customerstate') State   
